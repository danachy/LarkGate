# LarkGate Configuration Template
# Copy this file to .env and fill in your actual values

# Server Settings
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info
NODE_ENV=development

# Feishu App Configuration
# Get these from: https://open.feishu.cn/app
FEISHU_APP_ID=your_app_id_here
FEISHU_APP_SECRET=your_app_secret_here

# Development: http://localhost:3000/oauth/callback
# Production: https://your-domain.com/oauth/callback
FEISHU_REDIRECT_URI=http://localhost:3000/oauth/callback

# MCP Server (Lark OpenAPI MCP)
MCP_HOST=localhost
MCP_PORT=3001

# Rate Limiting
RATE_LIMIT_PER_SESSION=50
RATE_LIMIT_PER_IP=200
RATE_LIMIT_WINDOW_MS=60000

# Token Storage  
SNAPSHOT_INTERVAL_MS=600000
TOKEN_TTL_MS=2592000000