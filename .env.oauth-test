# 飞书 OAuth 测试配置
# 请将您的真实 App ID 和 App Secret 填入下面，然后复制到 .env 文件

PORT=3000
HOST=localhost
LOG_LEVEL=debug
NODE_ENV=development

# =====================================
# 飞书 OAuth 配置（请替换为真实值）
# =====================================
FEISHU_APP_ID=your_real_app_id_here
FEISHU_APP_SECRET=your_real_app_secret_here
FEISHU_REDIRECT_URI=http://localhost:3000/oauth/callback

# =====================================
# MCP 配置（OAuth 测试使用 mock）
# =====================================
LARK_MCP_BINARY=./mock-lark-mcp.cjs
LARK_MCP_BASE_PORT=3001
LARK_MCP_DEFAULT_PORT=4000

# =====================================
# 其他配置
# =====================================
MAX_INSTANCES=5
IDLE_TIMEOUT_MS=300000
MEMORY_LIMIT_MB=256
RATE_LIMIT_PER_SESSION=50
RATE_LIMIT_PER_IP=200
RATE_LIMIT_WINDOW_MS=60000
DATA_DIR=./data
SNAPSHOT_INTERVAL_MS=600000
TOKEN_TTL_MS=2592000000